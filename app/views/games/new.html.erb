  <p>
    <%= f.label :num_in_stock %><br>
    <%= f.text_field :num_in_stock %>
  </p>

  <p>
    <%= f.label :on_hand %><br>
    <%= f.text_field :on_hand %>
  </p>

  <p>
    <%= f.label :genre %><br>
    <%= f.select :genre, options_for_select(genre_names) %>
  </p>

  <p>
    <%= f.label :rating %><br>
    <%= f.select :rating, options_for_select(rating_list) %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :image %><br>
    <%= f.text_area :image %>
  </p>

  <p>
    <%= f.label :system %><br>
    <%= f.text_area :system %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<%end%>
